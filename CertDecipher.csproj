<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>certs.ico</ApplicationIcon>
    <RootNamespace>CertDecipher</RootNamespace>
    <AssemblyName>CertDecipher</AssemblyName>
    <StartupObject>CertDecipher.App</StartupObject>
  </PropertyGroup>

  <!-- Single-file publishing -->
  <PropertyGroup Condition="'$(Configuration)'=='Release' AND '$(RuntimeIdentifier)'!=''">
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="certs.ico" />
  </ItemGroup>
</Project>
